<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

	<import resource="classpath:gateway_settings.xml" />

	<bean name="BidderNode" parent="AotNode" scope="singleton">
		<property name="logLevel" value="WARN" />
		<property name="agents">
			<list>
				<ref bean="BidderAgent" />
			</list>
		</property>
	</bean>

	<bean name="BidderAgent" parent="SimpleAgent" scope="prototype">
		<property name="agentBeans">
			<list>
				<bean name="BidderBean1" class="de.dailab.jiactng.aot.auction.beans.BidderBeanCustom" scope="prototype">
					<property name="logLevel" value="INFO" />
					<property name="executionInterval" value="2000" />
					
					<property name="bidderId" value="Bidder_1" />
					<property name="bidderStrategy" value="simple" />
					<property name="groupToken" value="UniqueGroupToken1" />
					<property name="messageGroup" value="de.dailab.jiactng.aot.auction" />
					<!-- XXX add more properties if needed, e.g. for fine-tuning strategies -->
				</bean>
				<bean name="BidderBeanDummy1" class="de.dailab.jiactng.aot.auction.beans.BidderBean" scope="prototype">
					<property name="logLevel" value="INFO" />
					<property name="executionInterval" value="2000" />
					
					<property name="bidderId" value="DummyBidder_1" />
					<property name="groupToken" value="DummyUniqueGroupToken1" />
					<property name="messageGroup" value="de.dailab.jiactng.aot.auction" />
					<!-- XXX add more properties if needed, e.g. for fine-tuning strategies -->
				</bean>
				<bean name="BidderBeanDummy3" class="de.dailab.jiactng.aot.auction.beans.BidderBean" scope="prototype">
					<property name="logLevel" value="INFO" />
					<property name="executionInterval" value="2000" />
					
					<property name="bidderId" value="DummyBidder_3" />
					<property name="groupToken" value="DummyUniqueGroupToken3" />
					<property name="messageGroup" value="de.dailab.jiactng.aot.auction" />
					<!-- XXX add more properties if needed, e.g. for fine-tuning strategies -->
				</bean>
			</list>
		</property>
	</bean>

</beans>
